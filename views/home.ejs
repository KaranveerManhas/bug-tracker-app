<link rel="stylesheet" href="/css/home.css">
<main>
    <div class="project-heading">
        <h2>Projects</h2>
        <a href="/projects" id="create-project">
            <i class="fa-regular fa-pen-to-square"></i>
            Create Project
        </a>
    </div>
    <div class="projects">
        <% for (project of projects){ %>
        <div class="card">
            <div class="info">
                <h3 class="name">
                    <%= project.name %>
                    <a href="/projects/<%= project._id %>">
                        <i class="fa-solid fa-up-right-from-square"></i>
                    </a>
                </h3>
                <p class="desc"><%= project.description %></p>
            </div>
            <div class="issue-count-author-container">
                <p class="total-issues">
                    Issues: <span><%= project.bugs.length %></span>
                </p>
                <div class="author">
                    <img src="/images/profile.png" alt="Profile">
                    <p class="author-name">
                        <%= project.author.name %>
                    </p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</main>