<link rel="stylesheet" href="/css/project_page.css">

<main>
    <div class="header">
        <h2><%= project.name %></h2>
        <div class="options">
            <input type="text" id="bug-search" placeholder="Search bugs..">
            <div class="dropdown">
                <button class="dropbtn"><i class="fa-solid fa-filter"></i> &nbsp;Filter</button>
                <div class="dropdown-content">
                  <% for(label of labels){ %>
                  <label class="filter">
                    <%= label %>
                    <input  type="checkbox" data-label="<%= label %>">
                    <span class="checkmark"></span>
                  </label>
                  <% } %>
                </div>
              </div>  
            <a href="/issue?id=<%= project._id %>" id="create-issue">
                <i class="fa-regular fa-pen-to-square"></i>
                Create Issue
            </a>
        </div>
    </div>
    <div class="issues">
      <% if (project.bugs.length == 0) { %>
        <p class="no-issues-text">No Issues</p>
        <% } %>
      <table>
        <tr>
          <td>Title</td>
          <td>Description</td>
          <td>Labels</td>
          <td>Author</td>
        </tr>
        <% for (bug of project.bugs) { %>
          <tr id="bug-<%= bug._id %>">
            <td class="bug-title">
              <% if(locals.user.id == bug.author.id){ %>
                <a href="/issue/delete/<%= bug._id %>" class="delete-bug">
                  <i class="fa-solid fa-trash-can" ></i>
                </a>
              <% } %>
              <%= bug.title %>
            </td>
            <td>
              <p class="description"><%= bug.description %></p>
            </td>
            <% var labels =""; %>
            <td class="labels"><% for(label of bug.labels){ %>
                <% labels += label + ""; %>
                <% } %>
              <%= labels %>
            </td>
            <td>
              <%= bug.author.name %>
            </td>
          </tr>
          <% } %>
      </table>
    </div>
</main>

<script src="/js/project_page.js"></script>