<link rel="stylesheet" href="/css/project_page.css">

<main>
    <div class="header">
        <h2><%= project.name %></h2>
        <div class="options">
            <input type="text" id="bug-search" placeholder="Search bugs..">
            <div class="dropdown">
                <button class="dropbtn"><i class="fa-solid fa-filter"></i> &nbsp;Filter</button>
                <div class="dropdown-content">
                  <% for(label of labels){ %>
                  <label class="filter">
                    <%= label %>
                    <input type="checkbox" data-label="<%= label %>">
                    <span class="checkmark"></span>
                  </label>
                  <% } %>
                </div>
              </div>  
            <a href="/issue?id=<%= project._id %>" id="create-issue">
                <i class="fa-regular fa-pen-to-square"></i>
                Create Issue
            </a>
        </div>
    </div>
    <div class="issues">
      <% if (project.bugs.length == 0) { %>
        <p class="no-issues-text">No Issues</p>
        <% } %>
      <table>
        <tr>
          <td>Title</td>
          <td>Description</td>
          <td>Labels</td>
          <td>Author</td>
        </tr>
        <% for (bug of project.bugs) { %>
          <tr>
            <td><%= bug.title %></td>
            <td><%= bug.description %></td>
            <% var labels =""; %>
            <td><% for(label of bug.labels){ %>
                <% labels += label+", "; %>
                <% } %>
              <%= labels %>
            </td>
            <td>
              <%= bug.author.name %>
            </td>
          </tr>
          <% } %>
      </table>
    </div>
</main>