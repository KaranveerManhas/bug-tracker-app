<link rel="stylesheet" href="/css/users_sign_in.css">

<main>    
    <div class="wrapper">
        <form action="/users/create-session" method="post">
            <h1>Sign In</h1>
            <div class="input-box">
                <input type="email" placeholder="Email" name="email" required>
                <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Password" name="password" required>
                <i class="fa-solid fa-lock"></i>
            </div>
            <button type="submit" class="btn">Sign In</button>
            <a href="/users/auth/github" class="btn btn-2">
                <i class="fa-brands fa-github"></i>Sign In with Github
            </a>
            <div class="register-link">
                <p>Don't have an account?
                    <a href="/users/sign-up">Register here.</a>
                </p>
            </div>
        </form>
    </div>
</main>