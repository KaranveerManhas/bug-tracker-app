<link rel="stylesheet" href="/css/create_project.css">

<main>
    <div class="wrapper">
        <form action="/projects/create" method="post">
            <h2>Create A Project</h2>
            <input type="text" placeholder="Project's Name" name="name" required>
            <textarea name="description" id="description" cols="50" rows="5" placeholder="Description.." required></textarea>
            <input type="text" value="Author - <%= locals.user.name %>" placeholder="Author" disabled>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
</main>